      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Skor_Reg_2024_3.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GotPacient">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
            <TextBlock Text="Код пациента" FontSize="17"></TextBlock>
            <TextBox Name="QrText" FontSize="17"></TextBox>
            <Button x:Name="GotText" FontSize="17" Click="GotText_Click" Content="Найти"></Button>
            <Button x:Name="GotQr" FontSize="17" Click="GotQr_Click"  Content="Найти по qr-коду"></Button>
        </StackPanel>
    </Grid>
</Page>
